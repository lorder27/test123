@page "/Edukacija"
@inject IJSRuntime JS

@if (articles != null)
{
    <div id="divArticleList" class="d-flex flex-wrap justify-content-around">

        @if (ActiveArticleObject != null)
        {
            <ArticleViewer Data="@ActiveArticleObject" EventCallback="CloseArticle" />
        }
        else
        {
            @foreach (Models.ArticleObject article in articles)
            {
                <div class="card m-3 shadow" style="width:14rem" @onclick="() => ExpandCard(article)">
                    <img class="card-img-top img-fluid" src="@article.ImgSrc" alt="" />
                    <div class="card-body">
                        <h5 class="card-title text-center">@article.Title.ToUpper()</h5>
                        <p class="card-text">@article.Summary</p>
                    </div>
                </div>
            }
        }
    </div>
}
else
{
    <p> Loading...</p>
}
